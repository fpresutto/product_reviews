<% if !user_signed_in? %>
  <div class ="jumbotron">
    <h2>Your Favorite Products Reviewed</h2>
    <p> All things equal consider this right now self to impose hard quality </p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %> 

<div class="row">
  <% @products.each do |product| %> 
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag product.image.url(:medium), class: 'image'), product %>
      </div>
    </div>
  <% end %>
</div>